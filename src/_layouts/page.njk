---
layout: default
---
{%- if background -%}
    {% set css %}
    #intro {
        background-image: linear-gradient(rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.1)), url('{{ background | url }}'); 
        background-attachment: fixed;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 50vh;
        min-height: 500px;
    }
    {% endset %}
    <style>{{ css | safe | trim }}</style>
{%- endif -%}

<section id="intro" class="text-center text-white parallax bg-image shadow-2-strong">
    <div class="col-md-5 p-lg-5 mx-auto my-0">
        <h1 class="display-1 fw-normal mt-5 pt-5">{{ title }}</h1>
    </div>
</section>

<div class="container px-4 py-5">
    {{ content | safe }}
</div>