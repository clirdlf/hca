---
{% set posts = collections.posts | reverse %}

{% for post in posts %}
    <div class="row pt-md-4">
        <div class="col-md-12">
            <div class="blog-entry">
                
                <div class="mb-2">
                    <div class="meta-wrap">
                        <p class="meta">
                            <span>
                                <i class="bi bi-calendar"></i> {{ post.date | readableDate }}
                            </span>
                            {# <span>
                                <i class="bi bi-folder"></i> tags
                                {%- for tag in tags | filterTagList %}
	{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
	<li><a href="{{ tagUrl }}" class="post-tag">{{ tag }}</a>{%- if not loop.last %}, {% endif %}</li>
	{%- endfor %}
                            </span> #}
                        </p>
                        
                        <h2 class="mb-4"><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
                        {% excerpt post %}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endfor %}

